<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    android:id="@+id/binaryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_height"
        android:text="@string/binary_text"
        android:textSize="@dimen/text_view_title_size"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin"
        android:id="@+id/binaryTitle"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_big_height"
        android:textSize="@dimen/text_view_title_size"
        android:textAlignment="center"
        android:id="@+id/binaryInputTextView"
        android:layout_margin="@dimen/margin"
        android:paddingTop="20dp"
        android:layout_below="@+id/binaryTitle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin"
        android:id="@+id/binaryClearButton"
        android:layout_below="@id/binaryInputTextView">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/period"
            android:textSize="@dimen/button_text_size"
            android:id="@+id/periodButtonBinary"
            android:layout_margin="@dimen/margin"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/clear"
            android:textSize="@dimen/button_text_size"
            android:id="@+id/clearRightButtonBinary"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/clearAll"
            android:textSize="@dimen/button_text_size"
            android:id="@+id/clearAllButtonBinary"
            android:layout_margin="@dimen/margin"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin"
        android:id="@+id/binaryButtons"
        android:layout_below="@+id/binaryClearButton">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="@string/zero"
            android:textSize="@dimen/button_text_size"
            android:textAlignment="center"
            android:layout_margin="@dimen/margin"
            android:id="@+id/binary0"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="@string/one"
            android:textSize="@dimen/button_text_size"
            android:textAlignment="center"
            android:layout_margin="@dimen/margin"
            android:id="@+id/binary1"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_margin="@dimen/margin"
        android:text="@string/convert_button"
        android:id="@+id/binaryConvert"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:onClick="convertClicked"/>

</RelativeLayout>