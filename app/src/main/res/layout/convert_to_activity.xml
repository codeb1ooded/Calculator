<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin"
        android:text="Click on button to convert"
        android:layout_gravity="center"
        android:textSize="@dimen/text_view_title_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="@dimen/margin"
        android:id="@+id/convertedTextView"
        android:textSize="@dimen/text_view_size"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="@dimen/margin"
        android:textSize="@dimen/button_text_size"
        android:text="@string/binary"
        android:textAllCaps="false"
        android:onClick="binaryClicked"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="@dimen/margin"
        android:textSize="@dimen/button_text_size"
        android:text="@string/octal"
        android:textAllCaps="false"
        android:onClick="octalClicked"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="@dimen/margin"
        android:textSize="@dimen/button_text_size"
        android:text="@string/decimal"
        android:textAllCaps="false"
        android:onClick="decimalClicked"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="@dimen/margin"
        android:textSize="@dimen/button_text_size"
        android:text="@string/hexadecimal"
        android:textAllCaps="false"
        android:onClick="hexadecimalClicked"/>
</LinearLayout>