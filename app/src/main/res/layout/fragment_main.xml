<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.megha.scientificcalculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/one"
            android:id="@+id/button1"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/two"
            android:id="@+id/button2"
            android:layout_alignTop="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_toRightOf="@+id/button1"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/three"
            android:id="@+id/button3"
            android:layout_alignTop="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_toRightOf="@+id/button2"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/plus"
            android:id="@+id/buttonPlus"
            android:layout_alignTop="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_toRightOf="@+id/button3"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/four"
            android:id="@+id/button4"
            android:layout_below="@+id/button1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/five"
            android:id="@+id/button5"
            android:layout_alignTop="@+id/button4"
            android:layout_alignBottom="@+id/button4"
            android:layout_toRightOf="@+id/button4"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/six"
            android:id="@+id/button6"
            android:layout_alignTop="@+id/button4"
            android:layout_alignBottom="@+id/button4"
            android:layout_toRightOf="@+id/button5"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/minus"
            android:id="@+id/buttonMinus"
            android:layout_alignTop="@+id/button4"
            android:layout_alignBottom="@+id/button4"
            android:layout_toRightOf="@+id/button6"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/seven"
            android:id="@+id/button7"
            android:layout_below="@+id/button4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/eight"
            android:id="@+id/button8"
            android:layout_alignTop="@+id/button7"
            android:layout_alignBottom="@+id/button7"
            android:layout_toRightOf="@+id/button7"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/nine"
            android:id="@+id/button9"
            android:layout_alignTop="@+id/button7"
            android:layout_alignBottom="@+id/button7"
            android:layout_toRightOf="@+id/button8"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/multiply"
            android:id="@+id/buttonMultiply"
            android:layout_alignTop="@+id/button7"
            android:layout_alignBottom="@+id/button7"
            android:layout_toRightOf="@+id/button9"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/period"
            android:id="@+id/buttonPeriod"
            android:layout_below="@+id/button4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:id="@+id/button0"
            android:layout_alignTop="@+id/buttonPeriod"
            android:layout_alignBottom="@+id/buttonPeriod"
            android:layout_toRightOf="@+id/buttonPeriod"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/divide"
            android:id="@+id/buttonDivide"
            android:layout_alignTop="@+id/buttonPeriod"
            android:layout_alignBottom="@+id/buttonPeriod"
            android:layout_toRightOf="@+id/button0"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/equal"
            android:id="@+id/buttonEqual"
            android:layout_alignTop="@+id/buttonPeriod"
            android:layout_alignBottom="@+id/buttonPeriod"
            android:layout_toRightOf="@+id/buttonDivide"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>

</LinearLayout>
