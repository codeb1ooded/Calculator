<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.megha.scientificcalculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/sine"
            android:id="@+id/button1s"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            android:onClick="sinClicked"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/cosine"
            android:id="@+id/button2s"
            android:layout_alignTop="@+id/button1s"
            android:layout_alignBottom="@+id/button1s"
            android:layout_toRightOf="@+id/button1s"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            android:onClick="cosClicked"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/tansane"
            android:id="@+id/button3s"
            android:layout_alignTop="@+id/button1s"
            android:layout_alignBottom="@+id/button1s"
            android:layout_toRightOf="@+id/button2s"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            android:onClick="tanClicked"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/logarithm_base10"
            android:id="@+id/button4s"
            android:layout_below="@+id/button1s"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            android:onClick="logClicked"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/exponential"
            android:id="@+id/button5s"
            android:layout_alignTop="@+id/button4s"
            android:layout_alignBottom="@+id/button4s"
            android:layout_toRightOf="@+id/button4s"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            android:onClick="expClicked"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/natural_logarithm"
            android:id="@+id/button6s"
            android:layout_alignTop="@+id/button4s"
            android:layout_alignBottom="@+id/button4s"
            android:layout_toRightOf="@+id/button5s"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            android:onClick="lnClicked"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/square_root"
            android:id="@+id/button7s"
            android:layout_below="@+id/button4s"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            android:onClick="srClicked"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/power"
            android:id="@+id/button8s"
            android:layout_alignTop="@+id/button7s"
            android:layout_alignBottom="@+id/button7s"
            android:layout_toRightOf="@+id/button7s"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            android:onClick="powerClicked"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/square"
            android:id="@+id/button9s"
            android:layout_alignTop="@+id/button7s"
            android:layout_alignBottom="@+id/button7s"
            android:layout_toRightOf="@+id/button8s"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            android:onClick="squareClicked" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/bracket_open"
            android:id="@+id/button10s"
            android:layout_below="@+id/button7s"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            android:onClick="bracketOpenClicked"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/bracket_close"
            android:id="@+id/button11s"
            android:layout_alignTop="@+id/button10s"
            android:layout_alignBottom="@+id/button10s"
            android:layout_toRightOf="@+id/button10s"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            android:onClick="bracketClosedClicked"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/factorial"
            android:id="@+id/button12s"
            android:layout_alignTop="@+id/button10s"
            android:layout_alignBottom="@+id/button10s"
            android:layout_toRightOf="@+id/button11s"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            android:onClick="factorialClicked"/>

    </LinearLayout>

</LinearLayout>
